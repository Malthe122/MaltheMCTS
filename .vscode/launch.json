{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Gamerunner with Debugging",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ScriptsOfTribute-Core/Gamerunner/bin/Debug/net7.0/Gamerunner.dll",
            "args": [
                "MaltheMCTS",
                "RandomBot",
                "-n", "10",
                "-to", "10"
            ],
            "cwd": "${workspaceFolder}/ScriptsOfTribute-Core/Gamerunner",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}